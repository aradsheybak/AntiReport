<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity=""
    tools:context="wiadevelopers.com.payping.FinalActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#0f19d9"
        android:text="پرداخت شما با موفقیت انجام شد"/>

    <TextView
        android:id="@+id/txtTExplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="خرید نرم افزار"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingTop="1dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/txtTPRICE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginRight="1dp"
                android:padding="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:background="#fff"
                android:textSize="15sp"
                android:text="1000"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="8dp"
                android:gravity="center"
                android:background="#fff"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:text="مبلغ پرداختی :"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingTop="1dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/txtTNUM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginRight="1dp"
                android:padding="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:background="#fff"
                android:textSize="15sp"
                android:text="9256393"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="8dp"
                android:gravity="center"
                android:background="#fff"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:text="شماره تراکنش :"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="60dp"
        android:text="تکمیل خرید"/>

</LinearLayout>
